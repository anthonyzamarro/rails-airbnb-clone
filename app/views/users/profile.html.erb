<div class="container">
  <div class="row_profile">
    <div class="col-xs-12-col-sm-6-col-md-offset-4">

      <h1 class="profile_header">Welcome <%= current_user.name %></h1>
      <h3 class="profile_header"> Want to borrow </h3>
      <%= button_to 'Borrow a Dog', dogs_path, method: :get, class: "btn btn-primary center_button" %>
      <ul>
        <% if current_user.bookings %>
          <% current_user.bookings.each do |booking| %>
            <% if booking.status == 'pending' || booking.status == 'accept' %>
              <li>
                <%= cl_image_tag booking.dog.photo.path, width: 150, height: 100, crop: :fill %>
                <%= booking.dog.name %>
                <% if booking.status == 'accept' %>
                  <span>ACCEPTED!!!</span>
                <% end %>
                <%= booking.dog.species %> |
                <%= button_to 'Cancel', cancel_booking_path(booking), method: :patch, class: 'btn btn-success'  %>
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>

      <h3 class="profile_header"> Your dogs </h3>
      <%= button_to 'Add Dog', new_dog_path, method: :get, class: "btn btn-primary add_button"%>
      <ul>
        <% current_user.dogs.each do |dog| %>
        <li>
          <%= cl_image_tag dog.photo.path, width: 300, height: 200, crop: :fill %>
          <%= dog.name %><%=  button_to 'destroy', dog_path(dog), method: :delete, class: 'btn btn-success' %>
        </li>
          <% if dog.bookings %>
            <% dog.bookings.each do |booking| %>
              <% if booking.status == 'pending' %>
                <h2><%= booking.user.name %></h2>
                <%= button_to 'accept', accept_booking_path(booking), method: :patch, class: 'btn btn-success'  %>
                <%= button_to 'decline', decline_booking_path(booking), method: :patch, class: 'btn btn-danger'  %>
              <% end %>
            <% end %>
          <% end  %>
        <% end %>
      </ul>
      <%= button_to 'Delete Account', user_path(current_user), method: :delete, class: "btn btn-danger center_button"%>

    </div>
  </div>
</div>
